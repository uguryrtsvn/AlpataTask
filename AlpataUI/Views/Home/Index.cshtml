@model AlpataEntities.Dtos.AuthDtos.RegisterDto
@{
    Layout = "_HomeLayout";
    ViewData["Title"] = "Home Page";
}
@section Styles{
    <link href="~/Dassets/plugins/dropify/css/dropify.min.css" rel="stylesheet">
}
<div class="container">
    <div class="row vh-100 d-flex justify-content-center">
        <div class="col-12 align-self-center">
            <div class="row">
                <div class="col-lg-5 mx-auto">
                    <div class="card">
                        <div class="card-body p-0 auth-header-box">
                            <div class="text-center p-3">
                                <a href="index.html" class="logo logo-admin">
                                    <img src="~/logo1.png" height="50" alt="logo" class="auth-logo">
                                </a>
                                <h4 class="mt-3 mb-1 font-weight-semibold text-white font-18">Paneli kullanabilmek için lütfen kayıt olun.</h4>
                                <p class="text-muted  mb-0">Veya Giriş Yapın.</p>
                            </div>
                        </div>
                        <div class="card-body">
                            <ul class="nav-border nav nav-pills" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active font-weight-semibold" data-toggle="tab" href="#Register_Tab" role="tab">Kayıt Ol</a>
                                </li>
                            </ul>
                            <!-- Tab panes -->
                            <div class="tab-content">
                                <div class="tab-pane active px-3 pt-3" id="Register_Tab" role="tabpanel">
                                    <form class="form-horizontal auth-form my-4" asp-action="Register" asp-controller="Account" method="post" enctype="multipart/form-data">

                                        <div class="form-group">
                                            <label for="Name">Ad</label>
                                            <div class="input-group mb-3">
                                                <input type="text" class="form-control" asp-for="Name" name="Name" placeholder="İsminizi giriniz">
                                            </div>
                                            <span asp-validation-for="Name"></span>
                                        </div><!--end form-group-->

                                        <div class="form-group">
                                            <label for="Surname">Soyad</label>
                                            <div class="input-group mb-3">
                                                <input type="text" class="form-control" asp-for="Surname" name="Surname" placeholder="Soyad giriniz">
                                            </div>
                                            <span asp-validation-for="Surname"></span>
                                        </div><!--end form-group-->

                                        <div class="form-group">
                                            <label for="Email">Email</label>
                                            <div class="input-group mb-3">
                                                <input type="email" class="form-control" asp-for="Email" name="Email" placeholder="Emailinizi giriniz.">
                                            </div>
                                            <span asp-validation-for="Email"></span>
                                        </div><!--end form-group-->

                                        <div class="form-group">
                                            <label for="EmailConfirm">Email Tekrarı</label>
                                            <div class="input-group mb-3">
                                                <input type="email" class="form-control" asp-for="EmailConfirm" name="EmailConfirm" placeholder="Email tekrarı.">
                                            </div>
                                            <span asp-validation-for="EmailConfirm"></span>
                                        </div><!--end form-group-->

                                        <div class="form-group">
                                            <label for="Email">Telefon</label>
                                            <div class="input-group mb-3">
                                                <input type="number" class="form-control" asp-for="Phone" name="Phone" placeholder="05551231212.">
                                            </div>
                                            <span asp-validation-for="Phone"></span>
                                        </div><!--end form-group-->
                                        <div class="form-group">
                                            <label for="Password">Şifre</label>
                                            <div class="input-group mb-3">
                                                <input type="password" class="form-control" asp-for="Password" name="Password" placeholder="Şifre giriniz">
                                            </div>
                                            <span asp-validation-for="Password"></span>
                                        </div><!--end form-group-->
                                        <div class="form-group">
                                            <label for="PasswordConfirm">Şifre Tekrarı</label>
                                            <div class="input-group mb-3">
                                                <input type="password" class="form-control" asp-for="PasswordConfirm" name="PasswordConfirm" placeholder="Şifre tekrarı">
                                            </div>
                                            <span asp-validation-for="PasswordConfirm"></span>
                                        </div><!--end form-group-->


                                        <div class="card">
                                            <div class="card-header">
                                                <h6 class="card-title">Profile Resmi Yükleyin</h6>
                                            </div><!--end card-header-->
                                            <div class="card-body">
                                                <input type="file" id="input-file-now" name="file" class="dropify" accept="image/jpeg, image/png, image/jpg" required/>
                                            </div><!--end card-body-->
                                        </div><!--end card-->
                                        <div class="form-group mb-0 row">
                                            <div class="col-12 mt-2">
                                                <button class="btn btn-primary btn-block waves-effect waves-light" type="submit">Kayıt Ol <i class="fas fa-sign-in-alt ml-1"></i></button>
                                            </div><!--end col-->
                                        </div> <!--end form-group-->
                                    </form><!--end form-->
                                    <p class="mb-0 text-muted">Zaten hesabınız var mı?<a asp-controller="Home" asp-action="Login" class="text-primary ml-2">Giriş Yap</a></p>
                                </div>
                            </div>
                        </div><!--end card-body-->
                        <div class="card-body bg-light-alt text-center">
                            <span class="text-muted d-none d-sm-inline-block">Alpata Teknoloji © 2024</span>
                        </div>
                    </div><!--end card-->
                </div><!--end col-->
            </div><!--end row-->
        </div><!--end col-->
    </div><!--end row-->
</div><!--end container-->
@section Scripts{

    <script src="~/Dassets/plugins/dropify/js/dropify.min.js"></script>
    <script src="~/Dassets/pages/jquery.form-upload.init.js"></script>
    <partial name="_ValidationScriptsPartial" />
}